<!DOCTYPE html>
<html>
  <head>
    <title>RorCourseUwr</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body class="bg-secondary">
    <%= render partial: 'layouts/shared/navbar' %>

    <div class="container">
      <% flash_collect_alerts(flash).each do |key, value| %>
        <div class="<%= flash_class(key) %>">
              <%= value %>
        </div>
      <% end %>
      <%= yield %>
    </div>

  </body>
</html>
