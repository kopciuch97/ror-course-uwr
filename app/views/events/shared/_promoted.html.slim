- unless @events_promoted.empty?
  .row
    #carouselExampleIndicators.carousel.slide.w-100 data-ride="carousel"
      ol.carousel-indicators
        - for i in 0...@events_promoted.size do
          li class=('active' if i == 0) data-slide-to=i data-target="#carouselExampleIndicators"
      .carousel-inner
        - @events_promoted.each_with_index do |event_promoted, index|
          - if event_promoted.image.attached?
            .carousel-item class=('active' if index == 0)
              = image_tag event_promoted.image.variant(resize: "1280x720"), class: ""
              .carousel-caption.d-none.d-md-block
                a.text-light href=event_path(event_promoted)
                  h5 = event_promoted.name
                  p = event_promoted.content
      a.carousel-control-prev data-slide="prev" href="#carouselExampleIndicators" role="button"
        span.carousel-control-prev-icon aria-hidden="true"
        span.sr-only Previous
      a.carousel-control-next data-slide="next" href="#carouselExampleIndicators" role="button"
        span.carousel-control-next-icon aria-hidden="true"
          span.sr-only Next